# Alert for high error rate in the Sock Shop.
groups:
- name: Sock Shop
  rules:
  - alert: HighErrorRate
    expr: rate(request_duration_seconds_count{status_code="500"}[1m]) > .1
    for: 1m
    labels:
      severity: email
    annotations:
      summary: "High HTTP 500 error rates"
      description: "Rate of HTTP 500 errors per 1 minutes: {{ $value }}"
